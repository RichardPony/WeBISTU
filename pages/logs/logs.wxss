page {
  height: 100%;
  background: #2196F3;
  overflow: hidden;
}

page {
  width: 100%;
  height: 100%;
}

.help {
  font-size: 0.7rem;
  color: white;
  padding: 0 3%;
}

.input-group {
  border: 1px solid rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  background: white;
  border-radius: 5px;
}

.input-group:hover {
  transition: all 1s;
  border: 1px solid #fefefe;
}

.input-group:hover .input-label {
  color: black;
  border-right: 1px solid #fefefe;
}

.input-group .input-label {
  color: black;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8;
}

.input-group input {
  color: black;
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

