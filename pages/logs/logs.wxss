#bind {
  width: 100%;
  height: 100%;
}

#bind #content {
  border-radius: 10rpx;
  margin: 100rpx auto;
  padding-top: 40rpx;
  background: hsla(0,0%,100%,.25);
  width: 95%;
  height: 700rpx;
}

#bind #content #title {
  font-size: 40rpx;
  text-align: center;
  color: white;
}

#bind #content button {
  background: #009688;
  color: #fff;
  border-color: #333;
  margin: 20rpx;
}

#bind #content form {
  padding-top: 20rpx;
  display: block;
  width: 100%;
}
